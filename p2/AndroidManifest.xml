<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.paypalactionogram"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.paypalactionogram.ActionHealth"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.paypalactionogram.ListOnScreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".AboutMe"
            android:label="@string/app_name"
            android:theme = "@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.example.paypalactionogram.Prefs"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.paypalactionogram.Email"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.example.paypalactionogram.ComponentMessage"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>